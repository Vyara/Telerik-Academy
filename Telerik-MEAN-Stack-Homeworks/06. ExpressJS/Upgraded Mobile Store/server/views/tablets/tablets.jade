extends ../index

block main-content
    .container
        .jumbotron
            h2 Tablets
    .container
        .row
            each t in tablet
                .col-sm-4.col-lg-4.col-md-4
                    .thumbnail
                        img(src=t.img, alt=t.name)
                        .caption
                            h4.pull-right= '$ ' +  t.price
                            h4
                                a(href='/tablets/' + t._id)= t.name

