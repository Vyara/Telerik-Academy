extends ../index

block main-content
    .jumbotron.text-center()
        .row
            .col-md-4.col-md-offset-2

                .row
                    img.user-details-pic.img-circle.img-responsive(src="" + tablet.img)
            .col-md-4
                .panel.panel-warning
                    .panel-heading
                        h3.panel-title Tablet Details
                    .panel-body
                        ul.list-group
                            li.list-group-item Model:
                                strong= tablet.name
                            li.list-group-item Price:
                                strong= tablet.price
