@model CatsApp.Data.Models.Cat
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="well row">
    <h1>Name: @Model.Name</h1>
    <div class="col-md-6">
        <img style="max-width: 100%; max-height: 100%" class="catImage" src="@Model.ImageUrl" />
    </div>
    <div>
        <strong>Breed: @Model.Breed</strong>
    </div>
    <div>
        <strong>Age: @Model.Age</strong>
    </div>
    <div>
        <strong>Owner: @Model.Owner.FirstName @Model.Owner.LastName</strong>
    </div>
    <br />
    <div class="row">
        @Html.ActionLink("Go Back", "All", null, new { @class = "btn btn-success" })
    </div>

</div>

